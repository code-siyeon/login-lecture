<body>
    <div class="login-box">
        <h2>Login</h2>
        <form>
            <div class="user-box">
                <input id="id" type="text" name="" required="">
                <label>아이디</label>
            </div>
            <div class="user-box">
                <input id="password" type="password" name="" required="">
                <label>비밀번호</label>
            </div>
            <div class="user-box">
                <p id="button">로그인</p>
                <p class="message"><a href="/register"> Create an account </a></p>
            </div>
        </form>
    </div>
</body>

